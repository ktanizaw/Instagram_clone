<h1>新規アカウント登録</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %></h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div>

  <%= form_with(model: @user, local: true) do |f| %>
  <div class="form-text">
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>
  <div class="form-text">
  <%= f.label :email %>
  <%= f.email_field :email %>
  </div>
  <div class="form-text">
  <%= f.label :コメント %>
  <%= f.text_area :content %>
  </div>
  <div class="form-text">
  <%= f.label :アイコン %>
  <%= f.file_field :image %>
  </div>
  <div class="form-text">
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>
  <div class="form-text">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  </div>
  <div class="submit-button">
  <%= f.submit "アカウント登録" %>

  </div>
</div>

<% end %>
